
@foreach (var semelhante in Model)
{
    <li>
        <figure>
            <a href="@Url.Action("Detalhes", "Conteudo", new { @IdDoConteudo = semelhante.IdDoConteudo })"><img src="@semelhante.Imagem" alt="@semelhante.Titulo"></a>
            <figcaption>
                <span class="default-color">Game (eguru)</span>
                <h3 ><a href="@Url.Action("Detalhes", "Conteudo", new { @IdDoConteudo = semelhante.IdDoConteudo })">@semelhante.Titulo</a></h3>
                @*<span class="estrelas av-@semelhante.Avaliacao fa primary-color"></span>*@
                <span class="tertiary-color">A partir de <strong>@semelhante.CustoLabel</strong></span>
            </figcaption>
        </figure>
    </li>
}