
@foreach (var maisPopular in Model)
{
    <li>
        <figure>
            <a href="@Url.Action("Detalhes", "Conteudo", new { @IdDoConteudo = maisPopular.IdDoConteudo })"><img src="@maisPopular.Imagem" alt="@maisPopular.Titulo"></a>
            <figcaption>
                <span class="default-color">@maisPopular.Tipo</span>
                <h3 ><a href="@Url.Action("Detalhes", "Conteudo", new { @IdDoConteudo = maisPopular.IdDoConteudo })">@maisPopular.Titulo</a></h3>
                <span data-avaliacao="@maisPopular.Avaliacao" class="estrelas fa primary-color"></span>
                <span class="tertiary-color">A partir de <strong>@maisPopular.CustoLabel</strong></span>
            </figcaption>
        </figure>
    </li>
}