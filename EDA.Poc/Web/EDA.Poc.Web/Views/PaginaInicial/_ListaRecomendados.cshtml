
@foreach (var recomendado in Model)
{
    <li>
        <figure>
            <a href="@Url.Action("Detalhes", "Conteudo", new { @IdDoConteudo = recomendado.IdDoConteudo })"><img src="@recomendado.Imagem" alt="@recomendado.Titulo"></a>
            <figcaption>
                <span class="default-color">@recomendado.Tipo</span>
                <h3><a href="@Url.Action("Detalhes", "Conteudo", new { @IdDoConteudo = recomendado.IdDoConteudo })">@recomendado.Titulo</a></h3>
                <span data-avaliacao="@recomendado.Avaliacao" class="estrelas fa primary-color"></span>
                <span class="tertiary-color">A partir de <strong>@recomendado.CustoLabel</strong></span>
            </figcaption>
        </figure>
    </li>
}